<style>
  .svg {
    background-color: <%= params.bg %>;
    border-radius: 5px;
    padding: <%= params.padding %>px;
  }

  .counter {
    animation: fade-in 1.5s ease-out both;
    animation-delay: 0.8s;
  }

  @keyframes fade-in {
    from {
      transform: translateY(15px);
      opacity: 0;
    }

    65% {
      transform: translateY(0px);
    }

    to {
      opacity: 1;
    }
  }
</style>
